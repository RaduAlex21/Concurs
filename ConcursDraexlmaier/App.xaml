                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="15"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#3D3D45"
                            BorderThickness="0"
                            CornerRadius="25">
